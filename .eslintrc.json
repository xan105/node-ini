{
    "env": {
        "node": true,
        "commonjs": true,
        "es6": true,
        "es2017": true,
        "es2020": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
      "no-alert": "warn",
      "no-eval": "error",
      "require-await": "warn"
    },
    "overrides": [
      {
        "files": ["*.mjs"],
        "parserOptions": {
          "sourceType": "module"
        }
      }
    ]
}
